set -e
[ -n "$HERMIT_DEBUG" ] && set -x

for file in $@; do
    origfile=$file
    newfile=$HERMIT_PROFILE/${origfile#~/}

    if [ -f $newfile ]
    then
        echo "${origfile#~/} is already in your hermit!"
        exit 1
    fi

    mkdir -vp $(dirname $newfile)
    echo "mv: $(mv -vn $origfile $newfile)"
    echo "ln: $(ln -vs $newfile $origfile)"
done
