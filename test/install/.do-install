#!/usr/bin/env bash

curl https://raw.githubusercontent.com/RadicalZephyr/hermit/master/install.sh | sh

RET=$?

if [ $RET -ne 0 ]
then
    echo "Install script exited with status: $RET."
    exit 1
fi

if [ \! -d $INSTALL_DIR ]
then
    echo "Installed hermit not found at $INSTALL_DIR."
    exit 1
fi

exit 0
